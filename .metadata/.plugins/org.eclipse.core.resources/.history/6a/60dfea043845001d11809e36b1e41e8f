package kr.co.ezen.processor;

import javax.swing.plaf.multi.MultiButtonUI;

import org.springframework.beans.factory.config.BeanPostProcessor;
import org.springframework.expression.spel.CodeFlow.ClinitAdder;

public class testBeanPostProcessor implements BeanPostProcessor {

	//init-method 호출 전에
	public Object postProcessBeforeInitialization(Object bean, String beanName) {
		
		System.out.println("before : ~이전에");
		
		int sum, sum2;
		
		switch (beanName) {
			case "tb3" : sum = 100 + 200;
				System.out.println("덧셈의 합게: " + sum);	
					sum2 = 300 * 300;
				break;
			case "tb4" : sum2 = 100 - 200;
				System.out.println("뺄셈의 합게: " + sum2);
				break;
			default:
				System.out.println("tb3, tb4 객체가 아니므로 연산하지 않습니다.");
				break;
		}
		
		return bean;
		
	}
	
	//init-method 호출 후에
	public Object postProcessAfterInitialization(Object bean, String beanName) {
		
		System.out.println("before : ~이전에");
	}
		return bean;
		
	}

